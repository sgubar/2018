char16_t#include <stdio.h>
#include <math.h>
#include <string.h>

int hex2dec(char hex[]);

int main() {
	int c, d, f, q = 0;
	char hexF[32];

    printf("F = ");
	scanf("%s", &hexF);
	f = hex2dec(hexF);

	printf("C = ");
	scanf("%d", &c);

	printf("D = ");
	scanf("%d", &d);

	for(int a = 1; a <= d; a++) {
		q += a * (f - c);
	}
	
	printf("\n\nQ = %d\n", q);

	return 0;
}

int hex2dec(char hex[]) {
    long long decimal = 0, place = 1;
    int val, len = strlen(hex) - 1;

    for(int i = 0; hex[i] != '\0'; i++) {
        if(hex[i] >= '0' && hex[i] <= '9') {
            val = hex[i] - 48;
        } else if(hex[i] >= 'a' && hex[i] <= 'f') {
            val = hex[i] - 87;
        } else if(hex[i] >= 'A' && hex[i] <= 'F') {
            val = hex[i] - 55;
        }

        decimal += val * pow(16, len);
        len--;
    }
  
    return decimal;
}
